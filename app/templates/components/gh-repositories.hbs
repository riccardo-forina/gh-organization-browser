<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-5">
        <strong>{{filteredRepositories.length}}</strong> repositories
      </p>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <div class="level-item">
      <select onchange={{action "onChangeLanguage" value="target.value"}}>
        {{#each languageChoices as |l|}}
          <option
            value={{l.value}}
            selected={{l.selected}}
          >
            {{l.name}}
          </option>
        {{/each}}
      </select>
    </div>
    <div class="level-item">
      <label>
        {{input
          type="checkbox"
          name="showPublic"
          checked=(readonly showPublic)
          change=(action "onTogglePublic")
        }} Show public repositories
      </label>
    </div>
    <div class="level-item">
      <label>
        {{input
          type="checkbox"
          name="showPrivate"
          checked=(readonly showPrivate)
          change=(action "onTogglePrivate")
        }} Show private repositories
      </label>
    </div>
  </div>
</nav>

{{#each filteredRepositories as |repo|}}
 {{gh-repository
   name=repo.name
   description=repo.description
   url=repo.htmlUrl
   branches=repo.branches
   language=repo.language
   private=repo.private
 }}
{{/each}}
